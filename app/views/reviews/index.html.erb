<div class="container">
 <h1 class="text-center">Отзывы</h1>
<div class="row">
 <% @reviews.each do |item|%>
  <div class="col-md-4">
   <div class="review">
     <h4 class="text-primary text-center"><%= item.reviewer_name %></h4>
     <span class="procedure_title"><%= item.procedure.title %></span>
     <p><%= item.body %></p>
   </div>
  </div>
<%end%>
</div>



<div class="row">
  <div class="col-md-4 col-md-offset-4">
  <div class="review_form text-center">
    <%= simple_form_for @review,url: reviews_path do |f|%>
    <%= f.input :reviewer_name,label: 'Ваше Имя' %>
    <%= f.input :procedure_id,label: 'Выберите услугу',:collection => @procedures,:include_blank => false %>
    <%= f.input :body,as: :text,label: 'Ваш Отзыв',placeholder: 'Опишите процедуру и т.д...'%>
    <%= f.submit 'Оставить отзыв',class: 'btn btn-default form-control' %>
    <%end%>
  </div>
  </div>
</div>

  
</div>
